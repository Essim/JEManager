.application_page {
	padding-top: 1em;
	padding-bottom: 1em;
}

td.details-control {
	background: url('../pictures/details_open.png') no-repeat center center;
	cursor: pointer;
}

tr.shown td.details-control {
	background: url('../pictures/details_close.png') no-repeat center center;
}

td.participations-control {
	background: url('../pictures/details_open.png') no-repeat center center;
	cursor: pointer;
}

tr.shown td.participations-control {
	background: url('../pictures/details_open.png') no-repeat center center;
	cursor: pointer;
}

#chart {
	width:250px;
	height:150px;
}

