/*
 * General styles
 */
body, html {
	height: 100%;
	background-repeat: no-repeat;
	background-color: #d3d3d3;
	font-family: 'Oxygen', sans-serif;
	cursor: url("http://image.noelshack.com/fichiers/2017/18/1493709147-white-mouse-cursor-arrow-by-qubodup-11-copie.png"), pointer;
}

.main {
	margin-top: 70px;
}

h1.title {
	font-size: 50px;
	font-family: 'Passion One', cursive;
	font-weight: 400;
}

hr {
	width: 10%;
	color: #fff;
}

.form-group {
	margin-bottom: 15px;
}

label {
	margin-bottom: 15px;
}

input, input::-webkit-input-placeholder {
	font-size: 11px;
	padding-top: 3px;
}

.main-login {
	background-color: #fff;
	/* shadows and rounded borders */
	-moz-border-radius: 2px;
	-webkit-border-radius: 2px;
	border-radius: 2px;
	-moz-box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
	-webkit-box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
	box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
}

.main-center {
	margin-top: 30px;
	margin: 0 auto;
	max-width: 330px;
	padding: 40px 40px;
}

.login-button {
	margin-top: 5px;
}

.login-register {
	font-size: 11px;
	text-align: center;
}

.navbar .navbar-nav {
	display: inline-block;
	float: none;
	vertical-align: top;
}

.invited {
	background-color: #C4DEE6;
	border-color: #C4DEE6;
}

.confirmed {
	background-color: #D9FFDA;
	border-color: #D9FFDA;
}

.refused {
	background-color: #FFA0A0;
	border-color: #FFA0A0;
}

.invoiced {
	background-color: #FFFFAB;
	border-color: #FFFFAB;
}

.paid {
	background-color: #FFD5A0;
	border-color: #FFD5A0;
}

.cancelled {
	background-color: #FF99EC;
	border-color: #FF99EC;
}

