<!-- Start of the accueil div -->
<div class="application_page main-content">
	<div class="container" id="loginPage">

		<div class="row"></div>

		<div class="panel-heading">
			<div class="panel-title text-center">
				<!--<img src="pictures/ipl.png" alt="ipl logo" height="80" width="80" class="main-left">-->
				<h2 class="title text-center">Journée Entreprises Manager</h2>
				<hr />
				
				<div id="signInDiv" class="main-center main-login">
					<form id="signin" role="form">
					
						<div class="input-group">
							<span class="input-group-addon"><i
								class="glyphicon glyphicon-user"></i></span> <input id="login"
								type="text" class="form-control" name="email" value=""
								placeholder="Pseudo">
						</div>
						
						<br>
						<div class="input-group">
							<span class="input-group-addon"><i
								class="glyphicon glyphicon-lock"></i></span> <input id="password"
								type="password" class="form-control" name="password" value=""
								placeholder="Mot de passe">
						</div>
						<br>

						<button id="connectButton" type="button"
							class="btn btn-primary btn-lg btn-block login-button">Se
							connecter</button>
						<br>
					</form>
				</div>
				<h4 id="registerInfo" class="main-center">
					Pas encore de compte ? Cliquez ici pour vous <a
						id="form_register_show">inscrire </a>
				</h4>
				<!-- Rounded switch -->

				<div class="main-login main-center hidden" id="form_register">
					<br>
					<form class="form-horizontal" method="post" action="#">
						<div class="form-group">
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i
										class="fa fa-user fa-fw" aria-hidden="true"></i></span> <input
										type="text" class="form-control" name="name"
										id="pseudo_register" placeholder="Votre pseudo" />
								</div>
							</div>
						</div>
						<div class="form-group">
							<div class="cols-sm-10 ">
								<div class="input-group">
									<span class="input-group-addon"><i
										class="fa fa-user fa-fw" aria-hidden="true"></i></span> <input
										type="text" class="form-control" name="name"
										id="lastname_register" placeholder="Votre nom" />
								</div>
							</div>
						</div>
						<div class="form-group">
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i
										class="fa fa-user fa-fw" aria-hidden="true"></i></span> <input
										type="text" class="form-control" name="name"
										id="firstname_register" placeholder="Votre prénom" />
								</div>
							</div>
						</div>

						<div class="form-group">
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i
										class="fa fa-envelope fa" aria-hidden="true"></i></span> <input
										type="email" class="form-control" name="email" id="email"
										placeholder="Votre email" />
								</div>
							</div>
						</div>
						<div class="form-group">
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i
										class="fa fa-envelope fa" aria-hidden="true"></i></span> <input
										type="email" class="form-control" name="email"
										id="confirm_email" placeholder="Confirmer votre email" />
								</div>
							</div>
						</div>

						<div class="form-group">
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i
										class="fa fa-lock fa-lg" aria-hidden="true"></i></span> <input
										type="password" class="form-control" name="password"
										id="password_register" placeholder="Votre mot de passe" />
								</div>
							</div>
						</div>

						<div class="form-group">
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i
										class="fa fa-lock fa-lg" aria-hidden="true"></i></span> <input
										type="password" class="form-control" name="confirm"
										id="confirm_password"
										placeholder="Confirmer votre mot de passe" />
								</div>
							</div>
						</div>

						<div class="form-group ">
							<button type="button" id="register"
								class="btn btn-primary btn-lg btn-block login-button">Valider
								Inscription</button>
						</div>

					</form>
				</div>
				<h4 id="loginInfo" class="main-center">
					Cliquez ici pour vous <a id="form_register_hide">connecter </a>
				</h4>
			</div>
		</div>
	</div>
</div>
<!-- End of the accueil div -->